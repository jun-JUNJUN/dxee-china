# Backend environment variables

# Server configuration
PORT=8888
DEBUG=True

# MongoDB configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=dxeechina

# Meilisearch configuration
MEILISEARCH_HOST=http://localhost:7701
MEILISEARCH_API_KEY=masterKey

# DeepSeek API configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_API_URL=https://api.deepseek.com

# Google Custom Search API configuration (for web search integration)
# Get API key from: https://console.developers.google.com/
# Create Custom Search Engine at: https://cse.google.com/cse/
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_custom_search_engine_id_here

# Bright Data API configuration (for content extraction)
# Sign up at: https://brightdata.com/
BRIGHTDATA_API_KEY=your_brightdata_api_key_here
BRIGHTDATA_API_URL=https://api.brightdata.com/datasets/v3/scrape

# Serper API configuration (for deep-think web search)
# Sign up at: https://serper.dev/
SERPER_API_KEY=your_serper_api_key_here
SERPER_SEARCH_URL=https://google.serper.dev/search
SERPER_SCRAPE_URL=https://scrape.serper.dev/scrape

# Enhanced DeepSeek Research Configuration
DEEPSEEK_RESEARCH_TIMEOUT=600
CACHE_EXPIRY_DAYS=30

# Deep-Think Configuration
DEEPTHINK_TIMEOUT=600
MAX_CONCURRENT_DEEPTHINK=3

# Qwen API Configuration
DASHSCOPE_API_KEY=your_dashscope_api_key_here
DASHSCOPE_API_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# Authentication configuration
AUTH_SECRET_KEY=your_auth_secret_key_here_change_in_production

# Admin configuration
ADMIN_EMAIL=admin@deepschina.com

# Google OAuth configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8888/auth/google

# Microsoft OAuth configuration
MICROSOFT_CLIENT_ID=your_microsoft_client_id_here
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret_here
MICROSOFT_REDIRECT_URI=http://localhost:8888/auth/microsoft

# Apple OAuth configuration
APPLE_CLIENT_ID=your_apple_client_id_here
APPLE_CLIENT_SECRET=your_apple_client_secret_here
APPLE_REDIRECT_URI=http://localhost:8888/auth/apple

# GitHub OAuth configuration
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_REDIRECT_URI=http://localhost:8100/auth/github/callback

# SMTP Settings for Email Verification
SMTP_HOST=your_smtp_server.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SENDER_EMAIL=your_sender_email@example.com

# Logging configuration
LOG_LEVEL=INFO

